{
    "name": "sam-it/yii2-static-assets",
    "description": "Generate static assets and build a docker nginx container",
    "type": "yii2-extension",
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "codeception/codeception": "> 4",
        "yiisoft/yii2": "> 2",
        "brainmaestro/composer-git-hooks": "^2.8",
        "codeception/module-yii2": "^1.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "php": "> 7.4",
        "sam-it/docker-php": ">= 1.0.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "SamIT\\Yii2\\StaticAssets\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "vendor/yiisoft/yii2/Yii.php",
            "tests"
        ]
    },
    "extra": {
        "bootstrap": "SamIT\\Yii2\\StaticAssets\\Bootstrap",
        "hooks": {
            "pre-commit": [
                "echo committing as $(git config user.name) &&",
                "composer lint-fix  &&",
                "composer lint &&",
                "composer test"
            ],
            "commit-msg": [
                "npx commitlint -e"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": "cghooks add --ignore-lock",
        "test": "codecept run --coverage",
        "lint": "vendor/bin/phpcs",
        "lint-fix": "vendor/bin/phpcbf"
    }
}
