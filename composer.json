{
    "name": "sam-it/yii2-static-assets",
    "description": "Generate static assets and build a docker nginx container",
    "type": "yii2-extension",
    "require-dev": {
        "codeception/codeception": "> 4",
        "yiisoft/yii2": "> 2",
        "codeception/module-yii2": "^1.1",
        "symplify/easy-coding-standard": "^11.0",
        "captainhook/captainhook": "^5.10",
        "phpstan/phpstan": "^1.7",
        "ramsey/conventional-commits": "^1.3"

    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "php": "> 7.4",
        "sam-it/docker-php": ">= 1.0.5"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "SamIT\\Yii2\\StaticAssets\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "vendor/yiisoft/yii2/Yii.php",
            "tests"
        ]
    },
    "extra": {
        "bootstrap": "SamIT\\Yii2\\StaticAssets\\Bootstrap"
    },
    "scripts": {
        "test": "codecept run",
        "lint": "vendor/bin/ecs",
        "lint-fix": "vendor/bin/ecs --fix"
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
